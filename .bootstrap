#!/bin/sh
dirs="lqx lqiolib libmva parasol lqns qnsolver lqsim lqn2ps lqngen srvndiff doc"
mkdir -p config
aclocal -I config
libtoolize --force
for i in $dirs; do (cd $i; aclocal -I ../config); done
for i in $dirs; do (cd $i; automake -a -c; if [ $i != "doc" ]; then autoheader; fi; autoconf); done
automake -a -c
autoconf


